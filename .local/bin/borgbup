#!/usr/bin/env bash

if [[ ! -d ~/temp ]]; then
    mkdir ~/temp >/dev/null 2>&1
fi

umount_temp() {
    if mountpoint -q ~/temp; then
        borgmatic umount --mount-point $HOME/temp
    fi
}
umount_temp
borgmatic --verbosity -1 --syslog-verbosity 1
notify-send "Borg snapshot ready" "$(date '+%d.%m-%H:%M')"

#!/bin/bash
# https://github.com/bitterhalt
set -euo pipefail

CONFIRM="bemenu_runner -n -B 2 -l2 -p "Sure?""

case $(printf "%s\n" "Lock"  "Logout" "Suspend" "Reboot" "Shutdown" | bemenu_runner -n -B 2 -l 5 -p "Quit?" ) in
 "Shutdown")
    confirm=$(echo -e "Yes\nNo" | $CONFIRM )
    if [[ "$confirm" == "Yes" ]]; then
        loginctl poweroff
    fi
    ;;
"Reboot")
    confirm=$(echo -e "Yes\nNo" | $CONFIRM )
    if [[ "$confirm" == "Yes" ]]; then
        loginctl reboot
    fi
    ;;
"Suspend")
    loginctl suspend
    ;;
"Lock")
    $HOME/.config/sway/scripts/screenlocker
    ;;
"Logout")
    loginctl terminate-session "${XDG_SESSION_ID-}"
    ;;
esac

#!/usr/bin/env bash
set -e
case "$1" in
    wipe)
        answer=$(echo -e "Yes\nNo" | bemenu_runner -B2 -p "Wipe clipboard?" )

        if [[ $answer == "Yes" ]]; then
            rm $XDG_CACHE_HOME/cliphist/db
            notify-send -a center_notify "Clipboard" "Database deleted"
        fi

        exit 0
        ;;
    *)
        cliphist list | bemenu_runner -n -B2 -l 10 -p "clipboard" | cliphist decode | wl-copy
    esac

#!/usr/bin/env bash
set -e

MENU="bemenu_runner --bdr #DA1E28 --tf #f1c21b --hf #4589ff -n -B1 -l18 -H28"

selected="$(ps -a -u $USER | \
    $MENU --prompt "Kill process:" | \
    awk '{print $1" "$4}')"; 

if [[ ! -z $selected ]]; then

    answer="$(echo -e "Yes\nNo" | \
        $MENU --prompt "Kill $selected?")"

    if [[ $answer == "Yes" ]]; then
        selpid="$(awk '{print $1}' <<< $selected)"; 
        kill -9 $selpid
    fi
fi

exit 0
